{
  "name": "factbook-monorepo",
  "version": "1.0.0",
  "description": "A social media platform designed for factual discourse",
  "main": "server.js",
  "engines": {
    "node": "12.x"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev-server\"  \"npm run dev-client\"",
    "dev-server": "nodemon server/build/server/index.js",
    "dev-client": "npm start --prefix client",
    "start": "node server/build/server/index.js",
    "build-server": "tsc",
    "build-client": "npm run build --prefix client",
    "heroku-postbuild": "concurrently \"npm run build-server\" \"cd client && npm install && npm run build\"",
    "install-client": "npm i --prefix client"
  },
  "author": "Kyle Bennett",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^4.17.7",
    "@types/node": "^14.0.27",
    "concurrently": "^5.3.0",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "nodemon": "^2.0.4",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  }
}
